<resources>

    <style name="Theme.RadioJHero" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/jh_2</item>
        <item name="colorPrimaryVariant">@color/jh_2_darker</item>
        <item name="colorOnPrimary">@color/gray_900</item>
        <item name="colorSecondary">@color/jh_2</item>
        <item name="colorSecondaryVariant">@color/jh_2_darker</item>
        <item name="colorOnSecondary">@color/gray_900</item>
        <item name="android:colorBackground">@color/gray_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/gray_800</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="actionBarStyle">@style/JHActionBar</item>
        <item name="floatingActionButtonStyle">@style/JHFab</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="JHActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/gray_800</item>
    </style>

    <style name="JHFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RadioJHero" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/jh_1</item>
        <item name="colorPrimaryVariant">@color/jh_1_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/jh_1</item>
        <item name="colorSecondaryVariant">@color/jh_1_darker</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/gray_100</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="colorOnBackground">@color/gray_900</item>
        <item name="colorSurface">@color/gray_100</item>
        <item name="colorOnSurface">@color/gray_900</item>
        <item name="actionBarStyle">@style/JHActionBar</item>
        <item name="floatingActionButtonStyle">@style/JHFab</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <item name="android:isLightTheme" tools:targetApi="q">true</item>
    </style>

    <style name="JHActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/gray_100</item>
    </style>

    <style name="JHFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/gray_900</item>
    </style>
</resources>